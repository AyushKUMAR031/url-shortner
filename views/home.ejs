<!-- In Views we are creating .ejs files (which are basically HTML files) -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <style>
        * {
            margin: 0; padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to right, #314393, #341d4a);
            color: #fff;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .user-info {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .logout-btn {
            padding: 8px 15px;
            background-color: #d6b638;
            color: #333;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
        }
        .container {
            text-align: center;
            max-width: 600px;
            width: 100%;
            padding: 30px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
            animation: fadeIn 1s ease-in-out;
            margin: auto; /* Center the container */
        }
        .new-url-display {
            background-color: rgba(167, 255, 131, 0.2);
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            font-size: 1.1rem;
            color: #a7ff83;
            word-break: break-all;
            border: 1px solid #a7ff83;
        }
        .new-url-display a {
            color: #9be52e;
            font-weight: bold;
            text-decoration: underline;
        }
        h1 {
            margin-bottom: 10px;
            font-size: 2.5rem;
        }
        p {
            margin-bottom: 30px;
            font-size: 1rem;
            opacity: 0.9;
        }
        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-bottom: 30px;
        }
        input[type="text"] {
            padding: 12px;
            border: none;
            border-radius: 8px;
            width: 100%;
            outline: none;
        }
        button {
            padding: 12px;
            border: none;
            border-radius: 8px;
            background-color: #d6b638;
            color: #333;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        button:hover {
            background-color: #f6c90e;
        }
        ul {
            list-style: none;
            padding: 0;
            margin-top: 20px;
            text-align: left;
        }
        li {
            background: rgba(255, 255, 255, 0.1);
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 10px;
            word-break: break-word;
        }
        a {
            color: #095c10;
            text-decoration: none;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 30px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            padding: 12px 10px;
            text-align: left;
            color: #fff;
        }

        thead {
            background-color: rgba(0, 0, 0, 0.3);
        }

        tbody tr:nth-child(even) {
            background-color: rgba(255, 255, 255, 0.05);
        }

        tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.1);
            transition: background-color 0.3s ease;
        }

        td a {
            color: #ffd700;
            text-decoration: underline;
            word-break: break-word;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @media screen and (max-width: 480px) {
            h1 {
                font-size: 2rem;
            }
            .container {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <% if (locals.user) { %>
        <div class="user-info">
            <span>Welcome, <%= user.name %></span>
            <a href="/user/logout" class="logout-btn">Logout</a>
        </div>
    <% } %>
    <div class="container">
        <h1>ðŸ”— URL Shortener</h1>
        <% if (locals.id) { %>
            <p class="new-url-display">
                URL Generated: <a href="https://url-shortner-ruby-phi.vercel.app/url/<%= id %>" target="_blank">https://url-shortner-ruby-phi.vercel.app/url/<%= id %></a>
            </p>
        <% } %>
        <p>Paste your long URL below to get a short one instantly</p>

        <form action="/url" method="POST">
            <input type="text" name="url" placeholder="Enter your long URL here..." required>
            <button type="submit">Shorten</button>
        </form>
        
        <div>
            <%  if (locals.urls) { %>
                <table>
                    <thead>
                        <th>S.No.</th>
                        <th>ShortID</th>
                        <th>Redirect URL</th>
                        <th>Created At</th>
                        <th>Total Clicks</th>
                    </thead>
                    <tbody>
                        <% urls.forEach((url,index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><a href="http://localhost:8001/url/<%= url.shortId %>" target="_blank"><%= url.shortId %></a></td>
                                <td><a href="<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %></a></td>
                                <td><%= url.createdAt.toLocaleDateString() %></td>
                                <td><a href="/url/analytics/<%= url.shortId %>"><%= url.visitHistory.length %></a></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>
</body>
</html>
